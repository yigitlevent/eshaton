{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"esModuleInterop": true,
		"strict": true,
		"alwaysStrict": true,
		"removeComments": false,
		"noEmitOnError": true,
		"baseUrl": "./src",
		"outDir": "./build"
	},
	"include": [
		".",
		"bin",
		"routes"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}